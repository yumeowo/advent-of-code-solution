{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2024",
    "strict": true,
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
  },
  "include": ["src/**/*.ts", "src/scripts/**/*.ts"],
  "exclude": ["node_modules"]
}
